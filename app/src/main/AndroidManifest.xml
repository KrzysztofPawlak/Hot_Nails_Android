<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pawlak.krzysiek.hotnail">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_scratches_png6169"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="@android:icon">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="com.pawlak.krzysiek.hotnail.login.LoginSignActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.pawlak.krzysiek.hotnail.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.pawlak.krzysiek.hotnail.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pawlak.krzysiek.hotnail.MainActivity" />
        </activity>

        <activity android:name="com.pawlak.krzysiek.hotnail.image.PhotoActivity" />

        <activity android:name="com.pawlak.krzysiek.hotnail.login.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.pawlak.krzysiek.hotnail.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name="com.pawlak.krzysiek.hotnail.testChart"
            android:label="Yours Stats"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
