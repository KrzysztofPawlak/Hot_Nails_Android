<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawlak.krzysiek.hotnail.PhotoActivity">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wave"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kosalgeek.android.androidvolleyuploadimages.MainActivity"
    tools:showIn="@layout/activity_photo">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ivGallery"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivUpload"
        android:layout_toEndOf="@+id/ivUpload" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ivUpload"
        android:src="@android:drawable/ic_menu_upload_you_tube"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivCameraOld"
        android:layout_toEndOf="@+id/ivCameraOld" />

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/scrollView"-->
        <!--android:layout_below="@+id/ivGallery"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignBottom="@+id/ivImage">-->

        <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/linearMain"></LinearLayout>-->
    <!--</ScrollView>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImage"
        android:src="@drawable/imagecam"
        android:layout_alignParentTop="false"
        android:layout_centerInParent="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etImage"
        android:hint="title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:background="#ffffff" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ivCameraOld"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ivImage"
        android:layout_alignStart="@+id/ivImage"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>