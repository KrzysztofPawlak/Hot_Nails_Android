<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawlak.krzysiek.hotnail.PhotoActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/photo_add"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.kosalgeek.android.androidvolleyuploadimages.MainActivity"
        tools:showIn="@layout/activity_photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/img_buttons_section">
            <ImageView
                android:id="@+id/ivGallery"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivUpload"
                android:layout_toRightOf="@+id/ivUpload"
                android:src="@android:drawable/ic_menu_gallery" />

            <ImageView
                android:id="@+id/ivUpload"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivCameraOld"
                android:layout_toRightOf="@+id/ivCameraOld"
                android:src="@android:drawable/ic_menu_upload_you_tube" />

            <ImageView
                android:id="@+id/ivCameraOld"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignLeft="@+id/ivImage"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/ivImage"
                android:src="@android:drawable/ic_menu_camera" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:src="@drawable/imagecam" />

        <EditText
            android:id="@+id/etImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:autoText="false"
            android:background="@color/white"
            android:textSize="30dp"
            android:hint="title" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>