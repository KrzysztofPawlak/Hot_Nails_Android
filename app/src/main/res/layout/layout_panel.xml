<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_height_list"
        android:id="@+id/ivImage"
        android:src="@android:drawable/star_big_on"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivImage"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/fold"
            android:layout_alignTop="@+id/tvRate"
            android:layout_toLeftOf="@+id/tvRate"
            android:layout_toStartOf="@+id/tvRate" />

        <TextView
            android:paddingLeft="@dimen/gap_img_data"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvRate"
            android:layout_below="@id/ivImage" />
    </LinearLayout>

</RelativeLayout>
